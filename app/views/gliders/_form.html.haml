.row
  .col-sm-12
    = panel do
      = panel_body do
        = simple_form_for @glider, wrapper: :vertical_form do |f|
          .row
            .col-sm-6
              .row
                .col-sm-12
                  = f.input :immatriculation, required: false, autofocus: true
                  = f.input :name,            required: false
              .row
                .col-sm-6
                  = checkbox_tag f, :double_seater
                  = checkbox_tag f, :self_launching
                  = checkbox_tag f, :external
                .col-sm-6
                  = f.input :pilot_ids, required: false, collection: Pilot.all, include_blank: true, label_method: lambda { |owner| owner.name }, input_html: { 'data-placeholder' => t('pages.gliders.labels.owners_placeholder'), class: 'chosen-select', multiple: true }
            .col-sm-3
              = f.input :avatar
            - if @glider.avatar.file
              .col-sm-3
                = avatar_image_tag @glider.avatar, :thumb, class: 'lazy'
                = checkbox_tag f, :remove_avatar

          %hr
          = f.submit class: 'btn btn-primary'

:javascript
  $('.chosen-select').chosen({
    no_results_text: "#{t('pages.gliders.labels.no_pilots')}"
  });
