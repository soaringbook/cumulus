- breadcrumb :payments

- content_for :title, t('global.confirmation.labels.payment')
- content_for :head do
  = render 'payola/transactions/stripe_header'

.row
  .col-lg-8
    = panel do
      = panel_body do
        %h2= t('global.confirmation.wizard_title')
        .progress
          .progress-bar.progress-bar-primary{ role: "progressbar", style: "width: 70%" }

        .row
          .col-sm-12
            %h1= Plan.cumulus.name
        .row
          .col-sm-3
            %h2.label.label-warning.label-lg
              = number_to_currency Plan.cumulus.decimal_amount
              = "/ #{t('global.confirmation.labels.month')}"
          
          .col-sm-9
            %ul.pricing
              - (0..4).each do |index|
                %li= t("global.confirmation.pack.#{index}")
            = render 'payola/subscriptions/checkout', plan: Plan.cumulus, amount: number_to_currency(Plan.cumulus.decimal_amount), plan_image_path: image_path('Logo@2x'), email: current_pilot.email
