.middle-box.text-center.loginscreen.animated.fadeInDown
  %div
    %div
      %h1.logo-name SB
    %h3= t 'global.application.title'
    %p= t 'global.sign_in.subtitle'

    = render partial: 'layouts/devise/alerts'

    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.input :email, required: false, label: false, autofocus: true, class: 'form-control'
      .form-group
        = f.input :password,  required: false, label: false, class: 'form-control'
      = f.button :submit, t('global.sign_in.buttons.submit'), class: 'btn btn-primary block full-width m-b'

      = link_to new_password_path(resource_name) do
        %small= t('global.sign_in.links.forgot_password')

      %p.text-muted.text-center
        %small= t 'global.sign_in.labels.no_club'
      = link_to t('global.sign_in.links.sign_up'), new_registration_path(resource_name), class: 'btn btn-sm btn-white btn-block'

    %p.m-t
      %small= t('global.footer.crafter_with', icon: content_tag(:i, nil, class: 'red-600 fa-beer'), name: 'Jelle Vandebeeck').html_safe
