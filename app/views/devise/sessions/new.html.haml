.brand.visible-xs
  = image_tag 'LogoBlue.png', class: 'brand-img', height: '36px'
  %h3.brand-text.font-size-40= t 'global.application.title'

%h3.font-size-24= t 'global.login.sign_in'
%p= t 'global.login.sign_in_description'

= render partial: 'layouts/devise/alerts'

= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email,    required: false, label: false, autofocus: true
    = f.input :password, required: false, label: false

  .form-group.clearfix
    .checkbox-custom.checkbox-inline.checkbox-primary.pull-left
      = f.check_box :remember_me
      = f.label :remember_me
    = link_to t('global.login.forgot_password'), new_password_path(resource_name), class: 'pull-right', data: { no_turbolink: true }
    
  .form-actions
    = f.button :submit, t('global.login.log_in'), class: 'btn btn-primary btn-block'

%p
  = t 'global.login.no_club'
  = link_to t('global.login.sign_up'), new_registration_path(resource_name), data: { no_turbolink: true }
