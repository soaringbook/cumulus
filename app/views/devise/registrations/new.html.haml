%p= t 'global.sign_up.subtitle'

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .form-group
    = f.simple_fields_for :club do |c|
      = c.input :short_name, label: false, required: true, autofocus: true
  .form-group
    = f.input :email, required: false, label: false, class: 'form-control'
  = f.button :submit, t('global.sign_up.buttons.submit'), class: 'btn btn-primary block full-width m-b'

  %p.text-muted.text-center
    %small= t 'global.sign_up.labels.already_a_club'
  = link_to t('global.sign_up.links.sign_in'), new_session_path(resource_name), class: 'btn btn-sm btn-white btn-block'
