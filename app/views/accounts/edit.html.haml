- breadcrumb :account

- content_for :title, t('pages.accounts.labels.club', name: current_club.short_name.upcase)
- content_for :head do
  = render 'payola/transactions/stripe_header'

= current_plan.name
%br
= current_subscription.try(:stripe_status)
= current_subscription.try(:state)
= current_subscription.try(:trial_end)
= current_subscription.try(:plan)

.row
  .col-lg-10
    = panel do
      = panel_body do
        = tabs_tag do
          = tab_link_to t('pages.accounts.labels.tabs.payment'), 'payment', 'payment', params['tab'] == 'payment'

        = tab_content do
          = tab_pane 'payment', params['tab'] == 'payment' do
            .row
              = render 'payola/subscriptions/cancel', subscription: current_subscription

              - Plan.all.each do |plan|
                .col-sm-6.col-lg-4
                  .pricing-list
                    .pricing-header
                      .pricing-title= plan.name
                      .pricing-price
                        %span.pricing-amount= number_to_currency plan.decimal_amount
                        %span.pricing-period= "/ #{t('global.confirmation.labels.month')}"
                    %ul.pricing-features
                      - (0..1).each do |index|
                        %li= t("global.confirmation.packs.#{plan.stripe_id}.#{index}").upcase
                    .pricing-footer
                      = render 'payola/subscriptions/change_plan', subscription: current_subscription,
                                                                   new_plan: plan,
                                                                   button_class: 'btn btn-primary btn-outline', 
                                                                   button_text: t('pages.accounts.labels.change_subscription'),
                                                                   description: "Subscripe to this pack for #{number_to_currency(plan.decimal_amount)}. You can cancel your subscription at any time your want.",
                                                                   plan_image_path: image_path('LogoBlue@2x')
