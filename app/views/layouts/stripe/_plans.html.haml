- Plan.all.each do |plan|
  .col-sm-6.col-lg-4
    .pricing-list
      .pricing-header
        .pricing-title= plan.name
        .pricing-price
          %span.pricing-amount= number_to_currency plan.decimal_amount
          %span.pricing-period= "/ #{t('global.confirmation.labels.month')}"
      %ul.pricing-features
        - (0..1).each do |index|
          %li= t("global.confirmation.packs.#{plan.stripe_id}.#{index}").upcase
      .pricing-footer
        - if subscription_valid?
          = render 'payola/subscriptions/change_plan', subscription: current_subscription,
                                                       new_plan: plan,
                                                       button_class: 'btn btn-primary btn-outline', 
                                                       button_text: t('pages.accounts.labels.change_subscription'),
                                                       description: "Subscripe to this pack for #{number_to_currency(plan.decimal_amount)}. You can cancel your subscription at any time your want.",
                                                       plan_image_path: image_path('LogoBlue@2x')
        - else
          = render 'payola/subscriptions/checkout', plan: plan,
                                                    button_class: 'btn btn-primary btn-outline', 
                                                    button_text: t('global.confirmation.labels.subscribe'),
                                                    description: "Subscripe to this pack for #{number_to_currency(plan.decimal_amount)}. You can cancel your subscription at any time your want.",
                                                    plan_image_path: image_path('LogoBlue@2x'),
                                                    email: current_pilot.email
