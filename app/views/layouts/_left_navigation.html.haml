.site-menubar
  .site-menubar-body
    %div
      %div
        %ul.site-menu
          = menu_group_tag ''
          = menu_link_tag t('global.application.menu.dashboard'), 'fa-dashboard', root_path, controller_name == 'dashboard'

          - if can? :read, Glider
            = menu_group_tag t('global.application.menu.club')
            = menu_link_tag t('global.application.menu.gliders'), 'fa-plane', gliders_path, controller_name == 'gliders'

          - if can? :update, current_pilot.club
            = menu_group_tag t('global.application.menu.admin')
            = menu_link_tag t('global.application.menu.account'), 'fa-gear', edit_account_path, controller_name == 'accounts'
            = menu_link_tag t('global.application.menu.rights'), 'fa-lock', rights_path, controller_name == 'rights'
